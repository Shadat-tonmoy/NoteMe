<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.stcodesapp.noteit">

    <application
        android:name="com.stcodesapp.noteit.commons.CustomApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.stcodesapp.noteit.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.stcodesapp.noteit.activities.NoteAddActivity"
            android:windowSoftInputMode="stateHidden"></activity>
        <activity android:name="com.stcodesapp.noteit.activities.BaseActivity" />

    </application>

</manifest>