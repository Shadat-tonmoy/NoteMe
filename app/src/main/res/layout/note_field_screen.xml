<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/ui_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            layout="@layout/toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="80dp"
            android:clipToPadding="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/app_toolbar">

            <LinearLayout
                android:id="@+id/ui_component_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/title_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:padding="8dp"
                        android:text="@string/title"/>

                    <EditText
                        android:id="@+id/note_title_field"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_bg"
                        android:padding="8dp"/>

                </LinearLayout>

                <View
                    android:id="@+id/note_title_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:layout_marginTop="8dp"
                    android:background="?android:attr/listDivider" />

                <EditText
                    android:id="@+id/note_text_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_bg"
                    android:padding="8dp"
                    android:hint="@string/note"
                    android:minLines="5"
                    android:maxLines="10"
                    android:gravity="top|left"/>

                <View
                    android:id="@+id/note_text_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:layout_marginTop="8dp"
                    android:background="?android:attr/listDivider" />

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/chosen_image_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:flexWrap="wrap"
                    app:alignItems="stretch"
                    app:alignContent="stretch">

                </com.google.android.flexbox.FlexboxLayout>



            </LinearLayout>


        </ScrollView>



    </android.support.constraint.ConstraintLayout>



</android.support.design.widget.CoordinatorLayout>