<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Transparent" parent="AppTheme">
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.TransparentActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="noteHeaderStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="noteTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:drawablePadding">16dp</item>
    </style>

    <style name="noteTextStyleSmall" parent="noteTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:padding">0dp</item>
    </style>
    
    <style name="sorting_option_text_style">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="sorting_option_spinner_style">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">18dp</item>
        <item name="android:entries">@array/sorting_choices</item>
    </style>

    <style name="pro_header_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">@dimen/defaultMargin2x</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>


    <style name="pro_features_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">@dimen/defaultMargin</item>
        <item name="android:layout_margin">@dimen/defaultMargin</item>
    </style>

    <style name="pro_period_style">
        <item name="android:textAlignment">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="pro_price_style">
        <item name="android:textAlignment">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="pro_card_style">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:foreground">@color/text_default_trans</item>
    </style>


</resources>
